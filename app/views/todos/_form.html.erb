<%= render 'shared/errors', obj: @todo %>

<%= form_for @todo do |f| %>
  <div>
    <%= f.label :title %>
  </div>
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
  </div>
  <div>
    <%= f.text_area :description, rows: 5 %>
  </div>
  <div>
    <%= f.label :due_date %>
  </div>
  <div>
    <%= f.date_select :due_date %>
  </div><br>

  <%= f.label :category %>
  <%= f.collection_select(:category_id, @categories, :id, :name, prompt: true) %>

  <%= f.submit %>
<% end %>