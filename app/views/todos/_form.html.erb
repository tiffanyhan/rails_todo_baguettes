<% if @todo.errors.any? %>
  <ul>
  <% @todo.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @todo do |f| %>
  <div>
    <%= f.label :title %>
  </div>
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
  </div>
  <div>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :due_date %>
  </div>
  <div>
    <%= f.date_select :due_date %>
  </div><br>
  <%= f.submit %>
<% end %>